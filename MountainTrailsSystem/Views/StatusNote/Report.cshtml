@using MountainTrailsSystem.Core.Models
@model TrailStatusNoteViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Title"></label>
                <input asp-for="@Model.Title" class="form-control" placeholder="Title...">
                <span asp-validation-for="@Model.Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description"></label>
                <textarea asp-for="@Model.Description" class="form-control" placeholder="Issue description..."></textarea>
                <span asp-validation-for="@Model.Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ImageUrl"></label>
                <input asp-for="@Model.ImageUrl" class="form-control" placeholder="Image URL...">
                <span asp-validation-for="@Model.ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrailId"></label>
                <div class="dropdown-wrapper">
                <select asp-for="TrailId" class="form-control">
                    <option value="">Select trail</option>
                    @foreach (var trail in Model.Trails)
                    {
                        <option value="@trail.TrailId">@trail.Name</option>
                    }
                </select>
                <div class="pointer"></div>
                </div>
                <span asp-validation-for="TrailId" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input style="margin-top: 20px" class="btn btn-danger" type="submit" value="Report"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}