@using MountainTrailsSystem.Core.Models.Peak
@using MountainTrailsSystem.Core.Extensions
@model IEnumerable<PeakOverviewServiceModel>

@if (Model.Count() == 0)
{
    <h2 class="text-danger">There are no peaks matching the given criteria. You can take a look at all peaks instead.</h2>
    <div>
        <p class="text-center" style="margin-top=20px"><a class="btn btn-primary" asp-area="" asp-controller="Peak" asp-action="All">All peaks</a></p>
    </div>
    
}

else{
    <div class="row">
@foreach (var peak in Model)
{
    <div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@peak.ImageUrl" alt="Peak Image">
        <div class="card-body text-center">
            <h4>@peak.Name</h4>
            <h6>Elevation: <b>@peak.Elevation</b> m</h6>
            <h6>Mountain: <b>@peak.Mountain</b></h6>
            <br />
            <a asp-area="" asp-controller="Peak" asp-action="Details" asp-route-id="@peak.PeakId"
               asp-route-information="@peak.GetPeakDetails()" class="btn btn-success">Details</a>
        </div>
    </div>
</div>
}
    </div>
}

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}