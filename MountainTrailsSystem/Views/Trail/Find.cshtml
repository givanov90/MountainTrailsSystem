@model TrailSearchFormModel

<form asp-action="Search" asp-controller="Trail" method="get">
    <div class="form-group">
        <label asp-for="RegionId"></label>
        <div class="dropdown-wrapper">
        <select asp-for="RegionId" class="form-control dropdown-arrow">
            <option value="">Select Region</option>
            @foreach (var region in Model.Regions)
            {
                <option value="@region.RegionId">@region.Name</option>
            }
        </select>
        <div class="pointer"></div>
        </div>
        <span asp-validation-for="RegionId" class="small text-danger"></span>
    </div>
    <div class="form-group" style="margin-top: 20px">
        <label asp-for="@Model.DifficultyLevel"></label>
        <div class="dropdown-wrapper">
        <select asp-for="@Model.DifficultyLevel" class="form-control dropdown-arrow">
                <option value="">Select Difficulty Level</option>
                <option value="@DifficultyLevel.Easy">@DifficultyLevel.Easy</option>
                <option value="@DifficultyLevel.Moderate">@DifficultyLevel.Moderate</option>
                <option value="@DifficultyLevel.Intermediate">@DifficultyLevel.Intermediate</option>
                <option value="@DifficultyLevel.Difficult">@DifficultyLevel.Difficult</option>
                <option value="@DifficultyLevel.VeryDifficult">@DifficultyLevel.VeryDifficult</option>
                <option value="@DifficultyLevel.Extreme">@DifficultyLevel.Extreme</option>
        </select>
        <div class="pointer"></div>
        </div>
        <span asp-validation-for="@Model.DifficultyLevel" class="small text-danger"></span>
    </div>
    <div class="form-group" style="margin-top: 20px">
        <label asp-for="@Model.Duration">Duration (hours):</label>
        <input type="range" id="durationRange" name="durationRange" class="form-range" min="1" max="23.5" value="1" step="0.5">
        <div class="d-flex justify-content-between">
            <span id="rangeValue">1:00</span>
            <span>23:59</span>
        </div>
        <input type="hidden" id="durationInput" name="Duration" value="">
        <span asp-validation-for="@Model.Duration" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-top: 20px">
        <label asp-for="@Model.Elevation">Elevation Gained:</label>
        <input type="range" id="elevationRange" name="elevationRange" class="form-range" min="0" max="10000" value="1" step="50">
        <div class="d-flex justify-content-between">
            <span id="elevationValue">0 m</span>
            <span>10000 m</span>
        </div>
        <input type="hidden" id="elevationInput" name="Elevation" value="">
        <span asp-validation-for="@Model.Elevation" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<script src="~/js/duration.js"></script>
<script src="~/js/elevationGain.js"></script>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}