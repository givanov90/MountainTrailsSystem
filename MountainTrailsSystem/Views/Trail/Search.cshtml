@using MountainTrailsSystem.Core.Models
@model IEnumerable<TrailOverviewServiceModel>

@if (Model.Count() == 0)
{
    <h2 class="text-danger">There are no trails matching the given criteria. You can take a look at all trails instead.</h2>
    <div>
        <p class="text-center" style="margin-top=20px"><a class="btn btn-primary" asp-area="" asp-controller="Trail" asp-action="All">All trails</a></p>
    </div>
}

else{
    <div class="row">
@foreach (var trail in Model)
{
<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@trail.ImageUrl" alt="Trail Image">
        <div class="card-body text-center">
            <h4>"@trail.Name"</h4>
            <h6>Distance: <b>@trail.Distance.ToString("0.###")</b> km</h6>
            <h6>Difficulty level: <b>@trail.DifficultyLevel</b></h6>
            <br />
            <a asp-area="" asp-controller="Trail" asp-action="Details" asp-route-id="@trail.TrailId"
               asp-route-information="" class="btn btn-success">Details</a>
        </div>
    </div>
</div>
}
    </div>
}

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}