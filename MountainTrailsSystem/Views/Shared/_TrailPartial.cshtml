@using MountainTrailsSystem.Core.Models
@using MountainTrailsSystem.Core.Extensions
@model TrailOverviewServiceModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Trail Image">
        <div class="card-body text-center">
            <h4>@Model.Name</h4>
            <h6>Distance: <b>@Model.Distance.ToString("0.###")</b> km</h6>
            <h6>Difficulty level: <b>@Model.DifficultyLevel</b></h6>
            <br />
            <a asp-area="" asp-controller="Trail" asp-action="Details" asp-route-id="@Model.TrailId"
               asp-route-information="@Model.GetTrailDetails()" class="btn btn-success">Details</a>
        </div>
    </div>
</div>