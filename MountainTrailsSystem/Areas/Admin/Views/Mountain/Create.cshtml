@using MountainTrailsSystem.Core.Models
@model CreateMountainFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" placeholder="Mountain name...">
                <span asp-validation-for="@Model.Name" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedRegionIds">Region(s)</label>
                <select asp-for="SelectedRegionIds" asp-items="@Model.Regions.Select(r => new SelectListItem(r.Name, r.RegionId.ToString()))" class="form-control" multiple aria-expanded="false"></select>
                <span asp-validation-for="SelectedRegionIds" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}